{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "typeRoots": [
        "node_modules/@types"
       ],
    "types" : ["lodash", "highlight.js", "moment"],
    "lib": [
        "es2017",
        "dom"
       ]
}
